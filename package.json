{
    "name": "paraback-boilerplate",
    "version": "1.0.0",
    "description": "",
    "repository": {
        "type": "git",
        "url": ""
    },
    "author": "",
    "license": "MIT",
    "scripts": {
        "start": "set NODE_ENV=dev&& ts-node-dev --respawn --transpile-only ./src/server.ts",
        "start:uat": "npm run build-ts && set NODE_ENV=uat && node ./dist/server.js",
        "start:prod": "npm run build-ts:prod && NODE_ENV=prod node ./dist/server.js",
        "test": "jest --forceExit --coverage --verbose",
        "check-format": "npx prettier -c src",
        "format": "npx prettier -w src",
        "postinstall": "sudo pm2 install typescript",
        "build-ts": "tsc -p tsconfig.release.json || npm run copy",
        "copy": "cp package.json ./dist/ && cp pm2.config.uat.json ./dist/pm2.config.json && cp .env.uat ./dist/",
        "build-ts:prod": "tsc -p tsconfig.release.json || npm run copy:prod",
        "copy:prod": "cp package.json ./dist/ && cp pm2.config.prod.json ./dist/pm2.config.json && cp .env.prod ./dist/",
        "start:production-dummy": "set NODE_ENV=prod&& ts-node-dev --respawn --transpile-only ./src/server.ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.629.0",
        "axios": "^1.2.1",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "csv-parse": "^5.3.3",
        "dotenv": "^16.0.3",
        "exceljs": "^4.3.0",
        "express": "^4.18.2",
        "express-http-context": "^1.2.4",
        "expression": "^0.0.1",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "moment": "^2.29.4",
        "mongoose": "^6.8.0",
        "multer": "^1.4.4",
        "nodemailer": "^6.8.0",
        "socket.io": "^4.5.4",
        "uuid": "^9.0.0",
        "validator": "^13.7.0",
        "winston": "^3.8.2",
        "yarn": "^1.22.19"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.15",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/lodash": "^4.14.191",
        "@types/moment": "^2.13.0",
        "@types/mongoose": "^5.11.97",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.11.16",
        "@types/nodemailer": "^6.4.7",
        "@types/socket.io": "^3.0.2",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "prettier": "2.8.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.7.4"
    }
}
